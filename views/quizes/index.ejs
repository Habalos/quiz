<form action="/quizes" method="get">
  Buscar: <input type="text" name="search" value="<%= search %>" /><input type="submit" value="Enviar" />
</form>
<br />
<table>
<% if (quizes.length > 0) {
     for (var i = 0; i < quizes.length; i++) { %>
        <tr>
        <td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a> - <span class="small"><%= quizes[i].tema %></span></td>
        <%if (session.user){ %>
            <td><a href="/quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a></td>
            <td>
              <form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
                <button type="submit" onClick="return confirm('Borrar <%= quizes[i].pregunta %>')">Borrar</button>
              </form>
            </td>
        <% } %>
        </tr>
<%   }
   } else { %>
        <tr><td>No se han encontrado preguntas</td></tr>
<% } %>
</table>
<br />
<%if (session.user){ %>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<% } %>
